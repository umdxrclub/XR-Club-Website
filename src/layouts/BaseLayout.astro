---
import '../styles/global.css';
import ChatBot from '../components/ChatBot.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'XR Club - University of Maryland' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/webp" href={`${base}favicon.webp`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link rel="preload" as="image" href={`${base}Images/photo4.webp`} fetchpriority="high" />
    <link rel="preload" as="image" href={`${base}Images/XR logo.webp`} fetchpriority="high" />
    <link rel="preload" as="image" href={`${base}Images/CS.webp`} />
    <link rel="preload" as="image" href={`${base}Images/IMDM.webp`} />
    <ClientRouter />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body>
    <slot />
    <ChatBot transition:persist />
  </body>
</html>
