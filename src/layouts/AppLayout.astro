---
import '../styles/global.css';
import '../styles/auth.css';
import Header from '../components/Header.astro';
import ChatBot from '../components/ChatBot.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  hideHeader?: boolean;
  hideChatBot?: boolean;
}

const { title, description = 'XR Club - University of Maryland', hideHeader = false, hideChatBot = false } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href={`${base}favicon.png`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body style="background: #0a0a0a; margin: 0;">
    {!hideHeader && <Header />}
    <slot />
    {!hideChatBot && <ChatBot transition:persist />}

    <style>
      :global([data-header]) {
        opacity: 1 !important;
      }
    </style>

    <script>
      import { navigate } from 'astro:transitions/client';

      document.addEventListener('astro:page-load', () => {
        const base = import.meta.env.BASE_URL;
        document.querySelectorAll('[data-scroll-to]').forEach(link => {
          const target = (link as HTMLElement).dataset.scrollTo;
          const section = document.querySelector(`[data-${target}]`);
          if (!section) {
            link.addEventListener('click', (e) => {
              e.preventDefault();
              navigate(`${base}#${target}`);
            });
          }
        });
      });
    </script>
  </body>
</html>
