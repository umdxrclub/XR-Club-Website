---
import AppLayout from '../layouts/AppLayout.astro';
import '../styles/auth.css';
const base = import.meta.env.BASE_URL;
---

<AppLayout title="Project Proposal â€” XR Club" noindex>
  <main class="ideate">
    <div class="apply-page">
      <div class="prop__coming-soon">
        <h1 class="prop__coming-title">Coming Soon</h1>
        <p class="prop__coming-desc">The Project Proposal feature is not available yet. Check back soon!</p>
        <a href={`${base}`} class="prop__coming-link">Back to Home</a>
      </div>
    </div>
  </main>
</AppLayout>

<style>
  .ideate {
    min-height: 100vh;
    background: #0a0a0a;
  }

  .prop__coming-soon {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 70vh;
    color: rgba(255, 255, 255, 0.15);
    padding: 2rem;
  }

  .prop__coming-title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: #fff;
    letter-spacing: -0.03em;
    margin: 1.5rem 0 0.8rem;
  }

  .prop__coming-desc {
    font-family: 'Inter', sans-serif;
    font-size: clamp(0.95rem, 1.1vw, 1.15rem);
    font-weight: 300;
    color: rgba(255, 255, 255, 0.4);
    line-height: 1.7;
    max-width: 400px;
  }

  .prop__coming-link {
    display: inline-block;
    margin-top: 2rem;
    font-family: 'Inter', sans-serif;
    font-size: 0.95rem;
    font-weight: 500;
    color: #fff;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    padding: 0.65rem 1.8rem;
    border-radius: 980px;
    text-decoration: none;
    transition: all 200ms ease;
  }

  .prop__coming-link:hover {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.3);
  }
</style>
