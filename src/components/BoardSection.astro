<style>
  .board {
    position: relative;
    width: 100%;
    min-height: 100vh;
    overflow: hidden;
    visibility: hidden;
  }

  .board::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 7.5rem;
    background: linear-gradient(rgba(0, 0, 0, 0.95), transparent);
    z-index: 3;
    pointer-events: none;
  }

  .board::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 7.5rem;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.95));
    z-index: 3;
    pointer-events: none;
  }

  .board__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .board__dim {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    z-index: 1;
  }

  .board__layout {
    position: relative;
    z-index: 4;
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding: 7.5rem var(--page-padding) 3rem;
    gap: 1.2rem;
    box-sizing: border-box;
  }

  .board__header {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .board__title-wrap {
    position: relative;
  }

  .board__title-outline {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: 'Inter', sans-serif;
    font-size: clamp(6rem, 11vw, 15rem);
    font-weight: 900;
    letter-spacing: -0.04em;
    color: transparent;
    -webkit-text-stroke: 1.5px rgba(255, 255, 255, 0.08);
    pointer-events: none;
    user-select: none;
    white-space: nowrap;
  }

  .board__title {
    position: relative;
    font-family: 'Inter', sans-serif;
    font-size: clamp(3.5rem, 7vw, 8rem);
    font-weight: 800;
    letter-spacing: -0.04em;
    color: #fff;
    line-height: 0.9;
    text-shadow: 0 6px 30px rgba(0, 0, 0, 0.8), 0 2px 10px rgba(0, 0, 0, 0.9);
  }

  .board__desc {
    font-family: 'Inter', sans-serif;
    font-size: clamp(0.95rem, 1.1vw, 1.3rem);
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.7;
    max-width: 32vw;
  }

  .board__grid {
    width: 100%;
    max-width: 64rem;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2vw 0;
    flex: 1;
    align-content: center;
  }

  .board__card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: clamp(0.3rem, 0.5vw, 0.5rem);
  }

  .board__card--lead {
  }

  .board__photo {
    width: clamp(5rem, 10vw, 11rem);
    height: clamp(5rem, 10vw, 11rem);
    border-radius: 50%;
    object-fit: cover;
    border: 0.15rem solid rgba(255, 255, 255, 0.12);
    transition: border-color 250ms ease, transform 250ms ease;
  }

  .board__card:hover .board__photo {
    border-color: rgba(255, 255, 255, 0.3);
    transform: scale(1.04);
  }

  .board__photo--lead {
    border-color: rgba(255, 255, 255, 0.2);
  }

  .board__name {
    font-family: 'Inter', sans-serif;
    font-size: clamp(0.85rem, 1.1vw, 1.3rem);
    font-weight: 600;
    color: #fff;
    text-align: center;
    letter-spacing: -0.01em;
    margin-top: 0.2rem;
  }

  .board__name--lead {
    font-weight: 700;
  }

  .board__role {
    font-family: 'Inter', sans-serif;
    font-size: clamp(0.75rem, 0.9vw, 1.1rem);
    font-weight: 400;
    color: rgba(255, 255, 255, 0.5);
    text-align: center;
  }

  .board__linkedin {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: clamp(1rem, 1.2vw, 1.5rem);
    height: clamp(1rem, 1.2vw, 1.5rem);
    color: rgba(255, 255, 255, 0.3);
    transition: color 200ms ease;
    margin-top: 0.1rem;
  }

  .board__linkedin:hover {
    color: #0a66c2;
  }

  .board__linkedin svg {
    width: 100%;
    height: 100%;
  }

  @media (max-width: 768px) {
    .board__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 3vw 2vw;
    }

    .board__photo {
      width: clamp(4.5rem, 14vw, 7rem);
      height: clamp(4.5rem, 14vw, 7rem);
    }

    .board__desc {
      max-width: 70vw;
    }

    .board__title-outline { font-size: 5rem; }
    .board__title { font-size: 2.5rem; }
  }

  @media (max-width: 480px) {
    .board__layout { padding: 4rem 1rem 3rem; }

    .board__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 3vw 1.5vw;
    }

    .board__photo {
      width: clamp(3.5rem, 18vw, 5.5rem);
      height: clamp(3.5rem, 18vw, 5.5rem);
    }

    .board__name {
      font-size: clamp(0.7rem, 2.5vw, 0.9rem);
    }

    .board__role {
      font-size: clamp(0.6rem, 2vw, 0.8rem);
    }

    .board__desc {
      max-width: 85vw;
    }

    .board__title-outline { font-size: 4rem; }
    .board__title { font-size: 2rem; }
  }
</style>
