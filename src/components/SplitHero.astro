---
const base = import.meta.env.BASE_URL;
---
<section class="hero" data-hero>
  <img class="hero__bg" src={`${base}Images/photo4.jpg`} alt="" fetchpriority="high" />
  <div class="hero__dim"></div>
</section>

<style>
  .hero {
    position: relative;
    z-index: 2;
    width: 100%;
    height: 100vh;
    height: 100dvh;
    overflow: hidden;
  }

  .hero__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero__dim {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.65);
    z-index: 1;
  }
</style>
