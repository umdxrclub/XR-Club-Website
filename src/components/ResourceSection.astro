<style>
  .res {
    position: relative;
    width: 100%;
    min-height: 100vh;
    overflow: hidden;
    will-change: transform;
    contain: content;
    background: #000;
  }

  .res::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 7.5rem;
    background: linear-gradient(rgba(0, 0, 0, 0.95), #000);
    z-index: 2;
    pointer-events: none;
  }

  .res__layout {
    position: relative;
    z-index: 4;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 9rem var(--page-padding) 6rem;
    gap: 3rem;
  }

  .res__header {
    text-align: center;
    flex-shrink: 0;
  }

  .res__title-wrap {
    position: relative;
  }

  .res__title-outline {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: 'Inter', sans-serif;
    font-size: clamp(6rem, 11vw, 12rem);
    font-weight: 900;
    letter-spacing: -0.04em;
    color: transparent;
    -webkit-text-stroke: 1.5px rgba(255, 255, 255, 0.08);
    pointer-events: none;
    user-select: none;
    white-space: nowrap;
  }

  .res__title {
    position: relative;
    font-family: 'Inter', sans-serif;
    font-size: clamp(3.5rem, 7vw, 6.5rem);
    font-weight: 800;
    letter-spacing: -0.04em;
    color: #fff;
    line-height: 0.9;
    text-shadow: 0 6px 30px rgba(0, 0, 0, 0.8), 0 2px 10px rgba(0, 0, 0, 0.9);
  }

  .res__grid {
    width: 100%;
    max-width: 1200px;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1rem;
  }

.res__card {
    background: rgba(0, 0, 0, 0.45);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    gap: 0.75rem;
    transition: border-color 250ms ease, background 250ms ease, box-shadow 250ms ease;
  }

  .res__card:hover {
    border-color: rgba(255, 255, 255, 0.18);
    background: rgba(255, 255, 255, 0.06);
    box-shadow: 0 0 30px rgba(255, 255, 255, 0.03);
  }

  .res__img {
    width: 100%;
    aspect-ratio: 1;
    object-fit: contain;
    border-radius: 8px;
    display: block;
  }

  .res__name {
    font-family: 'Inter', sans-serif;
    font-size: clamp(0.65rem, 0.85vw, 0.9rem);
    font-weight: 500;
    color: rgba(255, 255, 255, 0.85);
    text-align: center;
    line-height: 1.3;
  }

  @media (max-width: 1024px) {
    .res__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 768px) {
    .res__grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .res__title-outline { font-size: 5rem; }
    .res__title { font-size: 2.5rem; }
  }

  @media (max-width: 480px) {
    .res__layout { padding: 4rem 1rem 3rem; }

    .res__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
    }

    .res__title-outline { font-size: 4rem; }
    .res__title { font-size: 2rem; }
  }

  .res__trigger {
    font-family: 'Inter', sans-serif;
    font-size: 1.6rem;
    font-weight: 700;
    letter-spacing: 0.01em;
    color: #fff;
    background: rgba(255, 255, 255, 0.12);
    border: 1px solid rgba(255, 255, 255, 0.25);
    padding: 1rem 3rem;
    border-radius: 980px;
    cursor: pointer;
    transition: background 200ms ease, border-color 200ms ease;
  }

  .res__trigger:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
  }

  @media (max-width: 768px) {
    .res__trigger {
      font-size: 1.2rem;
      padding: 0.8rem 2rem;
    }
  }
</style>
