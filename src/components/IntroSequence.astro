---
const base = import.meta.env.BASE_URL;
---
<div class="intro" data-intro>
  <div class="intro__bg" id="bg-container">
    <canvas id="bg-canvas" class="intro__bg-canvas"></canvas>
  </div>
  <div class="intro__split" id="split-scene">
    <div class="intro__split-white">
      <img src={`${base}Images/CS.webp`} alt="CS" class="intro__cs-logo" />
    </div>
    <div class="intro__split-black" id="split-black">
      <img src={`${base}Images/IMDM.webp`} alt="IMDM" class="intro__imdm-logo" />
    </div>
  </div>
</div>

<style>
  .intro {
    position: fixed;
    inset: 0;
    z-index: var(--z-intro);
    overflow: hidden;
    background: #000;
  }

  .intro__bg {
    position: fixed;
    inset: 0;
    z-index: 1;
    background: #000;
  }

  .intro__bg-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .intro__split {
    position: absolute;
    inset: 0;
    z-index: 2;
    background: #fff;
    opacity: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .intro__split.visible {
    opacity: 1;
  }

  .intro__split-white {
    position: absolute;
    inset: 0;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding-left: 15%;
  }

  .intro__split-black {
    position: absolute;
    top: 0;
    right: 0;
    width: 55%;
    height: 100%;
    background: #000;
    clip-path: polygon(35% 0, 100% 0, 100% 100%, 5% 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding-left: 10%;
    transform: translate(120%, -120%);
    transition: transform 1s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .intro__split-black.slide-in {
    transform: translate(0, 0);
  }

  .intro__cs-logo {
    max-height: 25vh;
    max-width: 40%;
    width: auto;
    height: auto;
    opacity: 0;
    transition: opacity 0.6s ease 0.2s;
  }

  .intro__split.visible .intro__cs-logo {
    opacity: 1;
  }

  .intro__imdm-logo {
    max-height: 30vh;
    max-width: 50%;
    width: auto;
    height: auto;
    opacity: 0;
    transition: opacity 0.6s ease 0.5s;
  }

  .intro__split.visible .intro__imdm-logo {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .intro__split-white {
      justify-content: center;
      padding-left: 0;
    }

    .intro__cs-logo {
      max-height: 15vh;
      max-width: 50%;
    }

    .intro__imdm-logo {
      max-height: 18vh;
      max-width: 60%;
    }
  }
</style>
