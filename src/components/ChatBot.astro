---
const base = import.meta.env.BASE_URL;
---

<div class="chat chat--hidden" data-chat>
  <div class="chat__trigger" data-chat-toggle>
    <div class="chat__speech" data-chat-speech>Need help on your application?</div>
    <model-viewer
      class="chat__model"
      src={`${base}Images/stickman.glb`}
      autoplay
      camera-orbit="0deg 75deg 2.5m"
      interaction-prompt="none"
      shadow-intensity="0"
      environment-image="neutral"
      exposure="1.2"
    ></model-viewer>
  </div>

  <div class="chat__panel" data-chat-window>
    <div class="chat__panel-top">
      <span class="chat__panel-title" data-chat-title>Ask XR Club</span>
      <button class="chat__panel-close" data-chat-close aria-label="Close chat">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
      </button>
    </div>

    <div class="chat__feed" data-chat-msgs></div>

    <form class="chat__input-row" data-chat-form>
      <input class="chat__field" data-chat-input type="text" placeholder="Type a message..." autocomplete="off" />
      <button class="chat__submit" type="submit" aria-label="Send">
        <svg viewBox="0 0 24 24" fill="currentColor" width="16" height="16"><path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/></svg>
      </button>
    </form>
  </div>
</div>

<script type="module" src="https://ajax.googleapis.com/ajax/libs/model-viewer/4.0.0/model-viewer.min.js"></script>

<script>
  import { supabase } from '../lib/supabase';
  import { navigate } from 'astro:transitions/client';

  // ── Module-level state (survives across navigations) ──
  let isOpen = false;
  const history: { role: string; content: string }[] = [];
  let ac: AbortController | null = null;

  function esc(s: string) {
    return s.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
  }

  function fmt(text: string) {
    let s = esc(text);
    s = s.replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>');
    s = s.replace(/(https?:\/\/[^\s<]+)/g, '<a href="$1" target="_blank" rel="noopener" class="chat__a">$1</a>');
    s = s.replace(/\n/g, '<br>');
    return s;
  }

  // ── Bind / rebind all DOM references + handlers ──
  function bindChat() {
    // Tear down previous listeners
    ac?.abort();
    ac = new AbortController();
    const { signal } = ac;

    const chatEl = document.querySelector('[data-chat]') as HTMLElement;
    const panel = document.querySelector('[data-chat-window]') as HTMLElement;
    const feed = document.querySelector('[data-chat-msgs]') as HTMLElement;
    const form = document.querySelector('[data-chat-form]') as HTMLFormElement;
    const input = document.querySelector('[data-chat-input]') as HTMLInputElement;
    const titleEl = document.querySelector('[data-chat-title]') as HTMLElement;
    if (!chatEl || !panel || !feed || !form || !input) return;

    // ── Visibility ──
    const introEl = document.querySelector('[data-intro]');
    if (introEl) {
      const obs = new MutationObserver(() => {
        if (!document.querySelector('[data-intro]')) {
          chatEl.classList.remove('chat--hidden');
          obs.disconnect();
        }
      });
      obs.observe(document.body, { childList: true });
    } else {
      chatEl.classList.remove('chat--hidden');
    }

    // ── Page mode ──
    const isIdeatePage = !!document.querySelector('[data-ideate-page]');
    const isApplyPage = window.location.pathname.includes('/apply');
    const mode = isIdeatePage ? 'ideate' : isApplyPage ? 'apply' : 'chat';

    if (isIdeatePage && titleEl) {
      titleEl.textContent = 'XR Ideator';
      setTimeout(() => { if (!isOpen) openChat(); }, 800);
    }

    if (isApplyPage && titleEl) {
      titleEl.textContent = 'Application Helper';
    }

    // ── Speech bubble (apply page only) ──
    const speechBubble = document.querySelector('[data-chat-speech]') as HTMLElement;
    if (speechBubble) {
      if (isApplyPage && !isOpen) {
        speechBubble.classList.add('chat__speech--visible');
      } else {
        speechBubble.classList.remove('chat__speech--visible');
      }
    }

    // ── Welcome message (only if feed is empty) ──
    if (feed.children.length === 0 && history.length === 0) {
      let welcomeMsg: string;
      if (isIdeatePage) {
        welcomeMsg = "I'll help you build a project proposal. What kind of XR experience do you want to create? (VR game, AR app, mixed reality, research, creative/art, etc.)";
      } else if (isApplyPage) {
        welcomeMsg = "Need help with your application? I can help you brainstorm answers, refine your responses, or fill out sections for you. Just tell me what you need!";
      } else {
        welcomeMsg = "Have any questions about XR Club or the XR industry? Ask away!";
      }
      addMsg(feed, welcomeMsg, 'bot');
    }

    // ── Restore open state ──
    if (isOpen) {
      panel.classList.add('chat__panel--open');
    }

    function openChat() {
      isOpen = true;
      panel.classList.add('chat__panel--open');
      speechBubble?.classList.remove('chat__speech--visible');
      input.focus();
    }

    function closeChat() {
      isOpen = false;
      panel.classList.remove('chat__panel--open');
      if (isApplyPage) speechBubble?.classList.add('chat__speech--visible');
    }

    // ── Toggle / close ──
    document.querySelectorAll('[data-chat-toggle]').forEach(btn => {
      btn.addEventListener('click', () => {
        if (isOpen) closeChat(); else openChat();
      }, { signal });
    });

    document.querySelector('[data-chat-close]')?.addEventListener('click', () => closeChat(), { signal });

    // ── Handle navigation from chat ──
    function handleNavigate(target: string) {
      const base = import.meta.env.BASE_URL;
      if (target.startsWith('/')) {
        navigate(base + target.slice(1));
      } else {
        const section = document.querySelector(`[data-${target}]`) as HTMLElement;
        if (section) {
          section.scrollIntoView({ behavior: 'smooth' });
        } else {
          navigate(`${base}#${target}`);
        }
      }
    }

    // ── Form submit ──
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const text = input.value.trim();
      if (!text) return;

      addMsg(feed, text, 'user');
      input.value = '';
      history.push({ role: 'user', content: text });

      const typing = addMsg(feed, mode === 'ideate' ? 'Ideating...' : 'Thinking...', 'typing');

      try {
        const { data, error } = await supabase.functions.invoke('chat', {
          body: { messages: history, mode },
        });

        typing.remove();
        if (error) throw error;

        const reply = data?.reply || "Sorry, I couldn't process that.";
        addMsg(feed, reply, 'bot');
        history.push({ role: 'assistant', content: reply });

        if (data?.navigate) {
          setTimeout(() => handleNavigate(data.navigate), 500);
        }

        if (data?.blocks && Array.isArray(data.blocks) && data.blocks.length > 0) {
          window.dispatchEvent(new CustomEvent('ideate-content', {
            detail: { blocks: data.blocks },
          }));
        }

        // Handle fill-field commands from apply mode
        if (data?.fillFields && typeof data.fillFields === 'object') {
          window.dispatchEvent(new CustomEvent('apply-fill-fields', {
            detail: data.fillFields,
          }));
        }
      } catch {
        typing.remove();
        addMsg(feed, "Something went wrong. Try again!", 'bot');
      }
    }, { signal });
  }

  function addMsg(feed: HTMLElement, text: string, type: 'user' | 'bot' | 'typing') {
    const el = document.createElement('div');
    el.className = `chat__bubble chat__bubble--${type}`;
    el.innerHTML = `<p>${type === 'user' ? esc(text) : fmt(text)}</p>`;
    feed.appendChild(el);
    feed.scrollTop = feed.scrollHeight;
    return el;
  }

  // ── Run on every page load (initial + navigations) ──
  document.addEventListener('astro:page-load', () => {
    // Small delay lets intro-skip run first on home page
    setTimeout(() => bindChat(), 100);
  });
</script>

<style>
  .chat {
    position: fixed;
    bottom: 0;
    left: 0.5rem;
    z-index: 9990;
    font-family: 'Inter', sans-serif;
  }

  .chat--hidden {
    display: none !important;
  }

  /* --- 3D Model trigger --- */
  .chat__trigger {
    position: relative;
    width: 180px;
    height: 180px;
    cursor: pointer;
  }

  .chat__model {
    width: 100%;
    height: 100%;
    --poster-color: transparent;
    background: transparent;
  }

  /* --- Speech bubble --- */
  .chat__speech {
    position: absolute;
    top: -8px;
    left: 140px;
    white-space: nowrap;
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.85);
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 10px;
    padding: 0.4rem 0.75rem;
    pointer-events: none;
    opacity: 0;
    transform: translateY(6px);
    transition: opacity 300ms ease, transform 300ms ease;
  }

  .chat__speech--visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* --- Panel --- */
  .chat__panel {
    position: absolute;
    bottom: 180px;
    left: 0;
    width: 320px;
    max-height: 420px;
    background: rgba(12, 12, 12, 0.92);
    backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 14px;
    display: none;
    flex-direction: column;
    overflow: hidden;
    box-shadow: 0 6px 30px rgba(0, 0, 0, 0.5);
  }

  .chat__panel--open {
    display: flex;
    animation: chatSlide 200ms ease;
  }

  @keyframes chatSlide {
    from { opacity: 0; transform: translateY(8px) scale(0.97); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }

  /* --- Top bar --- */
  .chat__panel-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.65rem 0.85rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    flex-shrink: 0;
  }

  .chat__panel-title {
    font-size: 0.8rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.7);
    letter-spacing: 0.02em;
  }

  .chat__panel-close {
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.35);
    cursor: pointer;
    padding: 2px;
    display: flex;
    align-items: center;
    transition: color 150ms ease;
  }

  .chat__panel-close:hover {
    color: rgba(255, 255, 255, 0.7);
  }

  /* --- Messages --- */
  .chat__feed {
    flex: 1;
    overflow-y: auto;
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    min-height: 200px;
    max-height: 300px;
  }

  .chat__feed::-webkit-scrollbar { width: 3px; }
  .chat__feed::-webkit-scrollbar-track { background: transparent; }
  .chat__feed::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.08); border-radius: 2px; }

  .chat__bubble {
    max-width: 85%;
    padding: 0.5rem 0.7rem;
    border-radius: 10px;
    font-size: 0.8rem;
    line-height: 1.5;
    font-weight: 400;
  }

  .chat__bubble p { margin: 0; }

  .chat__bubble--bot {
    align-self: flex-start;
    background: rgba(255, 255, 255, 0.07);
    color: rgba(255, 255, 255, 0.8);
    border-bottom-left-radius: 3px;
  }

  .chat__bubble--user {
    align-self: flex-end;
    background: rgba(255, 255, 255, 0.13);
    color: #fff;
    border-bottom-right-radius: 3px;
  }

  .chat__bubble--typing {
    align-self: flex-start;
    background: rgba(255, 255, 255, 0.04);
    color: rgba(255, 255, 255, 0.35);
    font-style: italic;
    border-bottom-left-radius: 3px;
  }

  /* --- Input row --- */
  .chat__input-row {
    display: flex;
    padding: 0.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    gap: 0.4rem;
    flex-shrink: 0;
  }

  .chat__field {
    flex: 1;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 980px;
    padding: 0.4rem 0.8rem;
    font-family: 'Inter', sans-serif;
    font-size: 0.8rem;
    color: #fff;
    outline: none;
    transition: border-color 150ms ease;
  }

  .chat__field::placeholder { color: rgba(255,255,255,0.25); }
  .chat__field:focus { border-color: rgba(255,255,255,0.2); }

  .chat__submit {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    flex-shrink: 0;
    transition: all 150ms ease;
  }

  .chat__submit:hover {
    background: rgba(255, 255, 255, 0.15);
    color: #fff;
  }

  /* --- Links --- */
  .chat__a {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: underline;
    text-underline-offset: 2px;
    word-break: break-all;
  }

  .chat__a:hover { color: #fff; }

  /* --- Mobile --- */
  @media (max-width: 480px) {
    .chat__trigger {
      width: 120px;
      height: 120px;
    }

    .chat__speech {
      left: 100px;
      font-size: 0.7rem;
    }

    .chat__panel {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      width: 100%;
      max-height: 65vh;
      border-radius: 14px 14px 0 0;
      border-bottom: none;
    }
  }
</style>
