<style>
  .footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 5;
    pointer-events: none;
    opacity: 0;
    visibility: hidden;
  }

  .footer__bar {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(50px) saturate(180%);
    -webkit-backdrop-filter: blur(50px) saturate(180%);
    border-top: 1px solid rgba(255, 255, 255, 0.15);
  }

  .footer__inner {
    display: flex;
    align-items: center;
    pointer-events: auto;
    padding: 0.65rem var(--page-padding);
  }

  .footer__left {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.7rem;
  }

  .footer__center {
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .footer__right {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0.7rem;
  }

  .footer__logo {
    height: 42px;
    width: auto;
    object-fit: contain;
    display: block;
  }

  .footer__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    text-decoration: none;
    font-family: 'Inter', sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.18);
    padding: 0.45rem 1rem;
    border-radius: 980px;
    transition: background 200ms ease, border-color 200ms ease;
    white-space: nowrap;
  }

  .footer__btn:hover {
    background: rgba(255, 255, 255, 0.22);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .footer__copy {
    font-family: 'Inter', sans-serif;
    font-size: 0.9rem;
    font-weight: 700;
    color: #fff;
    letter-spacing: -0.01em;
    line-height: 1.2;
  }

  .footer__sub {
    font-family: 'Inter', sans-serif;
    font-size: 0.55rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.6);
    letter-spacing: 0.06em;
    text-transform: uppercase;
  }

  .footer__socials {
    display: flex;
    align-items: center;
    gap: 0.55rem;
  }

  .footer__social {
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.5);
    transition: color 200ms ease;
    pointer-events: auto;
    line-height: 0;
  }

  .footer__social:hover {
    color: #fff;
  }

  .footer__social svg {
    display: block;
  }

  @media (max-width: 768px) {
    .footer__logo {
      height: 28px;
    }

    .footer__btn {
      font-size: 0.7rem;
      padding: 0.35rem 0.7rem;
    }

    .footer__social svg {
      width: 14px;
      height: 14px;
    }

    .footer__btn svg {
      width: 14px;
      height: 14px;
    }

    .footer__left,
    .footer__right {
      gap: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .footer__inner {
      padding: 0.45rem 0.8rem;
    }

    .footer__logo {
      height: 20px;
    }

    .footer__copy {
      font-size: 0.6rem;
    }

    .footer__sub {
      font-size: 0.35rem;
    }

    .footer__btn {
      font-size: 0.5rem;
      padding: 0.2rem 0.45rem;
      gap: 0.2rem;
    }

    .footer__btn svg {
      width: 11px;
      height: 11px;
    }

    .footer__social svg {
      width: 12px;
      height: 12px;
    }

    .footer__socials {
      gap: 0.3rem;
    }

    .footer__left,
    .footer__right {
      gap: 0.35rem;
    }
  }
</style>
