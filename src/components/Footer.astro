<style>
  .footer {
    position: relative;
    width: 100%;
    background: #000;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .footer__inner {
    position: relative;
    display: flex;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem var(--page-padding) 2rem;
  }

  .footer__icxr-link {
    position: absolute;
    left: 2rem;
    top: 50%;
    transform: translateY(-50%);
    line-height: 0;
  }

  .footer__icxr {
    height: 160px;
    width: auto;
    object-fit: contain;
    border-radius: 12px;
    transition: opacity 200ms ease;
  }

  .footer__icxr-link:hover .footer__icxr {
    opacity: 0.8;
  }

  .footer__center {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .footer__logo {
    height: 90px;
    width: auto;
    object-fit: contain;
    border-radius: 12px;
  }

  .footer__socials {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .footer__social {
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.35);
    transition: color 200ms ease, transform 200ms ease;
  }

  .footer__social:hover {
    color: #fff;
    transform: translateY(-2px);
  }

  .footer__social svg {
    display: block;
    width: 34px;
    height: 34px;
  }

  .footer__copy {
    font-family: 'Inter', sans-serif;
    font-size: 1.3rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.3);
    letter-spacing: 0.02em;
  }

  @media (max-width: 768px) {
    .footer__inner {
      flex-direction: column;
    }

    .footer__icxr-link {
      position: static;
      transform: none;
    }

    .footer__icxr {
      height: 120px;
    }

    .footer__logo {
      height: 64px;
    }

    .footer__socials {
      gap: 1.2rem;
    }

    .footer__social svg {
      width: 28px;
      height: 28px;
    }

    .footer__copy {
      font-size: 1.1rem;
    }

  }

  @media (max-width: 480px) {
    .footer__inner {
      padding: 2rem 1rem 1.5rem;
      gap: 1.2rem;
    }

    .footer__logo {
      height: 48px;
    }

    .footer__socials {
      gap: 0.9rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .footer__social svg {
      width: 24px;
      height: 24px;
    }

    .footer__copy {
      font-size: 1rem;
      text-align: center;
    }

  }
</style>
