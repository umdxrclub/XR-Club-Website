</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-navigation);
    pointer-events: none;
    opacity: 1;
    padding: 1rem var(--page-padding);
    display: flex;
    justify-content: center;
  }

  .header__bar {
    background: #000;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 980px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5), 0 1px 8px rgba(0, 0, 0, 0.3);
    max-width: 1200px;
    width: 100%;
    pointer-events: auto;
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 0.5rem 1.5rem;
  }

  .header__left {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
  }

  .header__logo-link {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .header__logo-img {
    height: 48px;
    width: auto;
    border-radius: 8px;
    object-fit: contain;
    box-shadow: none;
  }

  .header__nav {
    display: flex;
    align-items: center;
    gap: 2.2rem;
  }

  .header__link {
    font-family: 'Inter', sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    color: rgba(255, 255, 255, 0.7);
    transition: color 200ms ease;
    white-space: nowrap;
    cursor: pointer;
  }

  .header__link:hover {
    color: #fff;
  }

  .header__ideate {
    background: linear-gradient(90deg, #ff6b6b, #ffa500, #ffd93d, #6bff6b, #6bcdff, #b46bff, #ff6b6b);
    background-size: 200% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: rainbowShift 4s linear infinite;
    font-weight: 700;
    pointer-events: auto;
  }

  @keyframes rainbowShift {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
  }

  .header__btn {
    font-family: 'Inter', sans-serif;
    font-size: 1.2rem;
    font-weight: 700;
    letter-spacing: 0.01em;
    color: #fff;
    background: rgba(255, 255, 255, 0.12);
    border: 1px solid rgba(255, 255, 255, 0.25);
    padding: 0.6rem 1.6rem;
    border-radius: 980px;
    transition: background 200ms ease, border-color 200ms ease;
    white-space: nowrap;
  }

  .header__btn:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
  }


  .header__join {
    position: relative;
  }

  .header__join-trigger {
    user-select: none;
  }

  .header__join-dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 0.5rem;
    background: rgba(0, 0, 0, 0.92);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 16px;
    padding: 0.4rem 0;
    display: flex;
    flex-direction: column;
    min-width: 120px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 200ms ease, visibility 200ms ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
  }

  .header__join:hover .header__join-dropdown {
    opacity: 1;
    visibility: visible;
  }

  .header__join-item {
    font-family: 'Inter', sans-serif;
    font-size: 1.1rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    padding: 0.55rem 1.1rem;
    transition: color 200ms ease, background 200ms ease;
    white-space: nowrap;
    text-decoration: none;
  }

  .header__join-item:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
  }

  .header__social-item {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    padding: 0.5rem 1.1rem;
    transition: color 200ms ease, background 200ms ease;
    white-space: nowrap;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }

  .header__social-item:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
  }

  .header__social-item svg {
    flex-shrink: 0;
    opacity: 0.6;
  }

  .header__social-item:hover svg {
    opacity: 1;
  }

  .header__socials-dropdown {
    min-width: 160px;
  }

  .header__dropdown-divider {
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin: 0.3rem 0.8rem;
  }

  .header__user {
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
  }

  .header__user-name {
    font-family: 'Inter', sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    color: #fff;
    white-space: nowrap;
  }

  .header__dash-link {
    color: #60a5fa;
    text-decoration: none;
  }

  .header__dash-link:hover {
    color: #93c5fd;
  }

  .header__signout {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .header {
      padding: 0.75rem var(--page-padding);
    }

    .header__inner {
      padding: 0.45rem 1.2rem;
      gap: 1rem;
    }

    .header__logo-img {
      height: 32px;
      border-radius: 7px;
    }

    .header__nav {
      gap: 1rem;
    }

    .header__link {
      font-size: 1rem;
    }

    .header__btn {
      font-size: 1rem;
      padding: 0.4rem 1rem;
    }

    .header__link--hide-mobile {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .header {
      padding: 0.5rem 0.75rem;
    }

    .header__inner {
      padding: 0.4rem 0.9rem;
      gap: 0.75rem;
    }

    .header__logo-img {
      height: 28px;
      border-radius: 6px;
    }

    .header__nav {
      gap: 0.7rem;
    }

    .header__link {
      font-size: 0.95rem;
    }

    .header__btn {
      font-size: 0.95rem;
      padding: 0.35rem 0.8rem;
    }

    .header__link--hide-small {
      display: none;
    }
  }
</style>

<script>
  import { supabase } from '../lib/supabase';
  import { navigate } from 'astro:transitions/client';

  document.addEventListener('astro:page-load', () => {
    document.querySelectorAll('[data-scroll-to]').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const target = (link as HTMLElement).dataset.scrollTo;
        if (!target) return;

        const section = document.querySelector(`[data-${target}]`) as HTMLElement;
        if (section) {
          section.scrollIntoView({ behavior: 'instant' });
          history.replaceState(null, '', window.location.pathname);
        } else {
          navigate(`${import.meta.env.BASE_URL}#${target}`);
        }
      });
    });

    const userInfo = document.getElementById('auth-user-info');
    const userName = document.getElementById('auth-user-name');
    const signoutBtn = document.getElementById('auth-signout-btn');
    const dashLink = document.getElementById('auth-dash-link');

    (async () => {
      const { data: { user } } = await supabase.auth.getUser();
      if (user && userInfo && userName) {
        const { data: profile } = await supabase
          .from('profiles')
          .select('full_name, role')
          .eq('id', user.id)
          .single();

        userName.textContent = profile?.full_name || user.email || 'User';
        userInfo.style.display = 'inline-flex';

        if (dashLink && (profile?.role === 'board' || profile?.role === 'admin')) {
          dashLink.style.display = '';
        }
      }
    })();

    signoutBtn?.addEventListener('click', async () => {
      await supabase.auth.signOut();
      navigate(import.meta.env.BASE_URL);
    });
  });
</script>
